# frozen_string_literal: true

source "https://rubygems.org"

# Lightweight Ruby web framework
gem 'sinatra', '~> 3.0'

# SCSS compiler
gem 'sassc', '~> 3.15'

# Optional: pretty logger for development
gem 'logger', '~> 1.4'

# Optional: for JSON APIs
gem 'json', '~> 2.6'

# Optional: reload code in dev without restarting server
group :development do
  gem 'rerun', '~> 0.14'
end
